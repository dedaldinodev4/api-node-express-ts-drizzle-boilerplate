    "dotenv": "^16.3.2",
    "drizzle-orm": "^0.29.3",
    "drizzle-zod": "^0.5.1",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.9.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "drizzle-kit": "^0.20.13",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
